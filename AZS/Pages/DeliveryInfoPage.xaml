<Page x:Class="AZS.Pages.DeliveryInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AZS.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="800"
      Title="DeliveryFuelForm">

    <Grid>
        <DataGrid Name="DeliveryData" IsReadOnly="True" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Топливо" Width="*" Binding="{Binding Fuel.Name}"/>
                <DataGridTextColumn Header="Дата и Время" Width="*" Binding="{Binding Date}"/>
                <DataGridTextColumn Header="Объем" Width="*" Binding="{Binding Volume}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
